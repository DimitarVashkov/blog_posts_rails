<h1>Write a new post</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @post do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title, class:'form-control' %>

      <%= f.label :body %>
      <%= f.text_area :body, class:'form-control' %>

      <%= f.submit "Create post", class: 'btn btn-success' %>
    <% end %>
  </div>
</div>